{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@api/*": ["src/lib/api/*"],
      "@features/*": ["src/features/*"],
      "@mocks/*": ["src/mocks/*"]
    }
  },
  "include": ["src"]
}


